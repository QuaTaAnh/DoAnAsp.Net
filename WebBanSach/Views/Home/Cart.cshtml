@using WebBanSach.Models.Datas;

@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_BookStore.cshtml";
}

@model List<CartItem>


<h1>Shopping Cart</h1>

@if (Model.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TenSach</td>
                    <td>@item.DonGia</td>
                    <td>@item.SoLuong</td>
                    <td>@(item.DonGia * item.SoLuong)</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3">Total:</td>
                <td>@Model.Sum(item => item.DonGia * item.SoLuong).ToString()</td>
            </tr>
        </tfoot>
    </table>

    <a href="#">Checkout</a>
}




@model LoginModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container">
    <div class="content">
        <h1 class="title">Đăng nhập vào Book</h1>
        <form method="post" class="form">
            <div class="form-group">
                <input type="email" class="form-control" name="Email" required placeholder="Email hoặc số điện thoại"/>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="Password" required placeholder="Mật khẩu"/>
            </div>
            <button type="submit" class="btn btn-login">Đăng nhập</button>
            <p>Bạn chưa có tài khoản? <a asp-controller="Account" asp-action="Register">Đăng kí</a> </p>
        </form>
    </div>
</div>


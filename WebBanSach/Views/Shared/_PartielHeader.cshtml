            <form method="get" action="@Url.Action("SearchBookByName", "Book")">
                <div class="search">
        @*            <i class='bx bx-search'></i>*@
                    <button type="submit" class="bx bx-search"></button>
                    <input type="text" name="tensach" class="form-control" placeholder="Search for books...">
                    
                </div>

            </form>
        
      


        <div class="actions">
            <a href="./cart.html">
                <div class="header_cart">
                    <div class="header_cart-warp">
                        <i class='bx bxs-shopping-bag cart-header'></i>
                        <span class="badge">0</span>
                        <div class="header_cart_list no_cart">
                            <img src="/assets/images/empty_cart.png" alt="" class="header_cart-no-cart-img">
                            <p class="header_cart_list-no_cart_msg">
                                Chưa có sản phẩm
                            </p>
                        </div>
                    </div>
                </div>
            </a>
            <div class="dropdown">
                <div class="dropdown__select">
                    <a class="dropdown__selected" href="./login.html">
                        <i class='bx bxs-user'></i>
                    </a>
                </div>
                @if(TempData["user"] != null){
                  <ul class="dropdown__list">
                    <li class="dropdown__item">
                        <a href="#" class="dropdown__text">Thông tin tài khoản</a>
                    </li>
                    <li class="dropdown__item">
                        <a href="#" class="dropdown__text">Đơn mua</a>
                    </li>
                    <li class="dropdown__item">
                        <a href="#" class="dropdown__text">Đăng xuất</a>
                    </li>
                 </ul>
                }else{
                <ul class="dropdown__list">
                    <li class="dropdown__item">
                        <a href="#" class="dropdown__text">Đăng nhập</a>
                    </li>
                </ul>
                }

            </div>
        </div>
